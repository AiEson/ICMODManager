<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/namebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        style="?android:attr/buttonBarButtonStyle"
        android:text="复制" />
    <Button
        android:id="@+id/versionbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="?android:attr/buttonBarButtonStyle"
        android:padding="15dp"
        android:layout_below="@id/namebt"
        android:text="复制" />
    <Button
        android:id="@+id/authorbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/versionbt"
        style="?android:attr/buttonBarButtonStyle"
        android:padding="15dp"
        android:text="复制" />
    <Button
        android:id="@+id/pathbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_below="@id/authorbt"
        android:padding="15dp"
        android:text="复制" />
    <Button
        android:id="@+id/desbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pathbt"
        style="?android:attr/buttonBarButtonStyle"
        android:padding="15dp"
        android:text="复制" />


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/namebt"
        android:text="名称："
        android:textIsSelectable="true"
        android:padding="8dp"
        android:layout_alignBaseline="@id/namebt"
        android:textColor="#333333"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/version"
        android:textIsSelectable="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_toLeftOf="@id/versionbt"
        android:layout_alignBaseline="@id/versionbt"
        android:textColor="#333333"
        android:text="版本："/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="8dp"
        android:layout_toLeftOf="@id/authorbt"
        android:layout_alignBaseline="@id/authorbt"
        android:textColor="#333333"
        android:id="@+id/author"
        android:text="作者："/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/path"
        android:textIsSelectable="true"
        android:padding="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/pathbt"
        android:layout_alignBaseline="@id/pathbt"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="路径："/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/des"
        android:padding="8dp"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:textColor="#333333"
        android:layout_toLeftOf="@id/desbt"
        android:layout_alignBaseline="@id/desbt"
        android:text="描述："/>
</RelativeLayout>
